<!-- Modal -->
<div id="showModal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Detalles boleta</h4>
      </div>
        <div class="modal-body">
            <%= form_with(model: boletum, local: true) do |form| %>
                <% if boletum.errors.any? %>
                    <div id="error_explanation">
                    <h2><%= pluralize(boletum.errors.count, "error") %> prohibited this boletum from being saved:</h2>

                    <ul>
                    <% boletum.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                    </ul>
                    </div>
                <% end %>

                <div class="field">
                    <%= form.label :fecha %>
                    <%= form.date_field :fecha, id: :boletum_fecha %>
                </div>

                <div class="field">
                    <%= form.label :valor %>
                    <%= form.numbrer_field :valor, id: :boletum_valor %> [CLP]
                </div>

                <div class="field">
                    <%= form.label :descripcion %>
                    <%= form.text_area :descripcion, id: :boletum_descripcion %>
                </div>

                <div class="actions">
                    <%= form.submit %>
                </div>
            <% end %>
     <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
