                    <% end %>
                    </ul>
                    </div>
                <% end %>

                <%= render 'form', boletum: @boleta %>

            <% end %>
     <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
