<p id="notice"><%= notice %></p>

<h1>Perros</h1>

<%= link_to new_perro_path, :remote=>true do%> Agregar perro nuevo.
    <i class="fa fa-plus-square fa-3x" aria-hidden="true"></i>
<%end%>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha ingreso</th>
      <th>Fecha adopción</th>
      <th>Propietario </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perros.each do |perro| %>
      <tr>
        <td><%= perro.nombre %></td>
        <td><%= perro.fecha_ingreso %></td>
        <td><%= perro.fecha_adopcion %></td>
        <td><%= perro.propietario.nombre %></td>
        <td>
          <%= link_to perro, :remote=>true do %>
            Detalle<span class="fa fa-eye"></span>
          <%end%>
        </td>
        <td>
          <%= link_to edit_perro_path(perro), :remote=>true do%>
            Editar<span class="fa fa-pencil-square-o"></span>
          <%end%>
        </td>
        <td>
          <%= link_to 'Borrar', perro, method: :delete, data: { confirm: '¿Seguro?' } %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Volver', welcome_index_path %>

<br>

<% @perros.each do |perro| %>
  <div class="col-4">
    <%= link_to perro, :remote=>true do %>
      <figure class="figure">
        <%= image_tag perro.picture.thumb.url, class: 'figure-img img-fluid rounded' %>
      </figure>
    <%end%>
    <figcaption class="figure-caption"><strong><%= perro.nombre %></strong></figcaption>
    <%= link_to edit_perro_path(perro), :remote=>true do%>
      <span class="fa fa-pencil-square-o"></span>
    <%end%>
      <%= link_to 'Borrar', perro, method: :delete, data: { confirm: '¿Seguro?' } %>
  </div>
<%end%>

<br>

<%= link_to 'Volver', welcome_index_path %>

<div id ="new-perro" style = "display:noone;"></div>
<div id ="edit-perro" style = "display:noone;"></div>
<div id ="show-perro" style = "display:noone;"></div>
