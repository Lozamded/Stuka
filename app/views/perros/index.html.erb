<p id="notice"><%= notice %></p>

<h1>Perros</h1>

<%= link_to 'Agregar perro nuevo', new_perro_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha ingreso</th>
      <th>Fecha nacimiento</th>
      <th>Fecha adopcion</th>
      <th>Propietario </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perros.each do |perro| %>
      <tr>
        <td><%= perro.nombre %></td>
        <td><%= perro.fecha_ingreso %></td>
        <td><%= perro.fecha_nacimiento %></td>
        <td><%= perro.fecha_adopcion %></td>
        <td><%= perro.propietario_id %></td>
        <td><%= link_to 'Show', perro %></td>
        <td><%= link_to 'Edit', edit_perro_path(perro) %></td>
        <td><%= link_to 'Destroy', perro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


