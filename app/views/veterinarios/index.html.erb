<p id="notice"><%= notice %></p>

<h1>Veterinarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha nacimiento</th>
      <th>Especialidad</th>
      <th>Email</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinarios.each do |veterinario| %>
      <tr>
        <td><%= veterinario.nombre %></td>
        <td><%= veterinario.fecha_nacimiento %></td>
        <td><%= veterinario.especialidad %></td>
        <td><%= veterinario.email %></td>
        <td><%= veterinario.telefono %></td>
        <td><%= link_to 'Show', veterinario, :remote=>true %></td>
        <td><%= link_to 'Edit', edit_veterinario_path(veterinario), :remote=>true %></td>
        <td><%= link_to 'Destroy', veterinario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Veterinario', new_veterinario_path, :remote=>true %>
<%= link_to 'Volver', welcome_index_path %>


<div id ="new-veterinario" style = "display:noone;"></div>
