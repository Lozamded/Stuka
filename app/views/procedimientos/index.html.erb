<p id="notice"><%= notice %></p>

<h1>Procedimientos</h1>

<%= link_to new_procedimiento_path , :remote=>true do%> Agregar nuevo procedimiento.
    <i class="fa fa-plus-square fa-3x" aria-hidden="true"></i>
<%end%>
<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Precio</th>
      <th>Precio sruka</th>
      <th>Precio costo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedimientos.each do |procedimiento| %>
      <tr>
        <td><%= procedimiento.descripcion %></td>
        <td><%= procedimiento.precio %></td>
        <td><%= procedimiento.precio_sruka %></td>
        <td><%= procedimiento.precio_costo %></td>
        <td>
          <%= link_to procedimiento, :remote=> true do %>
            Detalle <span class="fa fa-eye"></span>
          <%end%>
        </td>
        <td>
          <%= link_to edit_procedimiento_path(procedimiento), :remote=> true do %>
            Editar <span class="fa fa-pencil-square-o">
          <%end%>
        </td>
        <td><%= link_to 'borrar', procedimiento, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td></tr>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'Volver', welcome_index_path %>

<div id ="new-procedimiento" style = "display:noone;"></div>
<div id ="edit-procedimiento" style = "display:noone;"></div>
